<script>
    document.querySelector('.jumpdown').onclick = () => {
        document.querySelector('.title').scrollIntoView({ behavior: 'smooth', block: 'nearest', inline: 'start' });
    };

    // Scrollbar custom direction
    document.querySelector('.images').addEventListener('wheel', (event) => {
        event.preventDefault();
        document.querySelector('.images').scrollLeft += event.deltaY;
    });
</script>