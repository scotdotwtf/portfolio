---
layout: 'base.njk'
---

<style>
    .images {
        scrollbar-width: none;
    }

    /* Desktop */
    @media (min-width: 766px) {
        .jumpdown {
            display: none;
        }

        .pushed {
            max-width: 70vw;
            margin-left: auto;
            margin-right: auto;
        }

        .images {
            position: relative;
            width: 100vw;
            flex-direction: row;
            align-items: flex-end;
            overflow-x: scroll;
            white-space: nowrap;
            flex-shrink: none;
            padding-left: 15vw;
            padding-right: 30vw;
            margin-top: 10pt;
        }
    }

    /* Mobile */
    @media (max-width: 766px) {
        .article {
            border-radius: 13px;
        }

        .images {
            flex-direction: column;
        }

        .image {
            border-radius: 8px;
        }

        .jumpdown {
            display: inline;
        }
    }
</style>

<div class="article flex-col highlight grow overflow-y-scroll overflow-x-clip mt-1">
    <div class="images flex gap-0.5 grow w-parent">
        {% for image in images %}
            <div class="image flex flex-col relative container mb-1 w-full break-inside-avoid overflow-clip">
                <!-- todo: later load small img before <div class="blur-load" style="background-image: url(); background-size: cover;
                background-position: center;"></div> -->
                <img class="relative" {{ special }} loading="lazy" alt="{{ title }}" src="{{ image }}">
                <p class="text-gray-400 sm:block hidden">{{ image }}</p>
            </div>
        {% endfor %}
    </div>

    <a class="jumpdown no-wiggle sticky bottom-0 left-full bubble bg-blue-100 rounded-full cursor-pointer text-right w-parent py-5">-> See article</a>

